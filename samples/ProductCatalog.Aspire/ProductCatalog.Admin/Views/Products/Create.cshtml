@model ProductCatalog.Shared.Dtos.CreateUpdateProductDto
@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Create New Product</h1>

            <form asp-action="Create" method="post" class="mt-4">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sku" class="form-label">SKU</label>
                    <input asp-for="Sku" class="form-control" placeholder="e.g., PROD-001" />
                    <span asp-validation-for="Sku" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"
                              placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" placeholder="e.g., Electronics" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Price" class="form-control" placeholder="0.00" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                        <input asp-for="StockQuantity" class="form-control" placeholder="0" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Create Product
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>

            <div class="alert alert-info mt-4">
                <strong>Note:</strong> Creating a product will invalidate the product list cache.
                The Redis backplane will notify all API instances to refresh their cache.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
